<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Vacancy" table="vacancy">
    <indexes>
      <index name="region__id" columns="region__id"/>
      <index name="organization_id" columns="organization_id"/>
      <index name="industry_id" columns="industry_id"/>
      <index name="profession_id" columns="profession_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="vacancyId" type="text" column="vacancy_id" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="creationDate" type="date" column="creation_date" nullable="false"/>
    <field name="datePosted" type="datetime" column="date_posted" nullable="false"/>
    <field name="baseSalary" type="float" column="base_salary" precision="10" scale="0" nullable="false"/>
    <field name="title" type="text" column="title" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="employmentType" type="text" column="employment_type" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="workHours" type="text" column="work_hours" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="responsibilities" type="text" column="responsibilities" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="incentiveCompensation" type="text" column="incentive_compensation" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="requirements" type="text" column="requirements" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="socialProtecteds" type="text" column="social_protecteds" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="source" type="text" column="source" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="workPlaces" type="integer" column="work_places" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="additionalInfo" type="text" column="additional_info" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="deleted" type="boolean" column="deleted" nullable="false"/>
    <field name="vacurl" type="text" column="vacUrl" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="industry" target-entity="Industries" fetch="LAZY">
      <join-columns>
        <join-column name="industry_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="organization" target-entity="Organizations" fetch="LAZY">
      <join-columns>
        <join-column name="organization_id" referenced-column-name="id" />
      </join-columns>
    </many-to-one>
    <many-to-one field="region" target-entity="Regions" fetch="LAZY">
      <join-columns>
        <join-column name="region__id" referenced-column-name="region_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="profession" target-entity="Professions" fetch="LAZY" >
      <join-columns>
        <join-column name="profession_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
