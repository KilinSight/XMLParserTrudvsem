{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block body %}
    <body>

    <div class="container content text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="panel-body">
                    <h1><span>Обработка открытых данных с сайта trudvsem.ru</h1>
                </div>
            </div>
        </div>
            <div class="row both-col">
            <div class="left-col">
                <form action="/get_results" method="POST" class="search-form">
                    <h5>Введите параметры поиска:</h5>
                    <div class="c-regions left-col__inner">
                        <input  autocomplete="off" class="c-regions__input form-control" type="text" id="searchQuery" name="regions" placeholder="Введите регион">
                        <ul class="c-regions__container">
                        </ul>
                    </div>

                    <div class="c-industry  left-col__inner">
                        <input  autocomplete="off" class="c-industry__input form-control" type="text" id="searchQuery" name="industries" placeholder="Введите сферу деятельности">
                        <ul class="c-industry__container">
                        </ul>
                    </div>

                    <div class="c-profession  left-col__inner">
                        <input  autocomplete="off" class="c-profession__input form-control" type="text" id="searchQuery" name="professions" placeholder="Введите профессию">
                        <ul class="c-profession__container">
                        </ul>
                    </div>

                    <div class="c-organization  left-col__inner">
                        <input  autocomplete="off" class="c-organization__input form-control" type="text" id="searchQuery" name="organizations" placeholder="Введите организацию">
                        <ul class="c-organization__container">
                        </ul>
                    </div>

                    <button class="btn btn-success" type="submit" name="search" value="1">Поиск</button>
                </form>
            </div>
                <div class="right-col">
                    <h2>Выберите параметры в меню</h2>
                    <div class="right-col__section"></div>
                    <div class="right-col__section"></div>
                </div>
            </div>
        </div>
    </div>

    </body>
    </html>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ path }}/web/js/regions.js"></script>
{% endblock %}

